{
  "ts-node": {
    // Do not forget to `npm i -D tsconfig-paths`
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "module": "NodeNext",
    "baseUrl": "./src",
    "outDir": "dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "paths": {  
      "@src/*": ["*"], // Define a path alias for absolute imports
      
    },
  },
  "include": [
    "src/**/*.ts"
  ]
}